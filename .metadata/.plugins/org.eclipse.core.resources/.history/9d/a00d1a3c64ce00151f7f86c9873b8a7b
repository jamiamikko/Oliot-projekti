package sensor;

import lejos.hardware.lcd.LCD;
import lejos.hardware.port.SensorPort;
import lejos.hardware.sensor.EV3IRSensor;

public class InfraredSensorDistance extends Thread {

	public float distance;
	
	final private EV3IRSensor infraredSensor = new EV3IRSensor(SensorPort.S2);
			
	float[] samples;

	
	public void Avoid() {
		
		
		
		int sampleSize = infraredSensor.sampleSize();
		
		float [] sample = new float[sampleSize];
		
		infraredSensor.fetchSample(sample,0);
		
		distance = sample[0];
		
		LCD.drawString("Distance : " + distance, 0, 0);
	}
}
