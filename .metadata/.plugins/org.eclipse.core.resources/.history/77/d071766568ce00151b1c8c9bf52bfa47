package avoidance;

import lejos.hardware.lcd.LCD;
import lejos.hardware.port.SensorPort;
import lejos.hardware.sensor.EV3IRSensor;
import lejos.hardware.sensor.SensorMode;
import lejos.utility.Delay;


public class ObstacleDetector extends Thread{

	public float distance;
	
	final EV3IRSensor infraredSensor = new EV3IRSensor(SensorPort.S2);
			
	float[] samples;

	
	public void Avoid(){
		
		
		
		
		
		
		SensorMode sampleSize = infraredSensor.getDistanceMode();
		
		distance = sampleSize;
		
		LCD.drawString("Distance : " + distance, 0, 0);
		
		
		
		infraredSensor.close();
	}
}
